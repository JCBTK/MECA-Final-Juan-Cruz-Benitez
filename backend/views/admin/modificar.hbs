<div class="container" style "margin:100px 0">
    <div class="modificar">
        <div class="col-6 offset-3">
            <h4>Modificar Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{novedad.id}}">
                <div class="mb-3 row">
                    <p class="Imagen">
                        <label>Imagen:<input type="file" class="form-control" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                        actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <div class="mb-3 row">
                    <label for="">Titulo</label>
                    <input type="text" class="llenar" name="titulo" value="{{novedad.titulo}}" placeholder="Titulo">
                </div>

                <div class="mb-3 row">
                    <label for="">Subitulo</label>
                    <textarea class="llenar" name="subtitulo" placeholder="Subtitulo">{{novedad.subtitulo}}</textarea>
                </div>

                <div class="mb-3 row">
                    <label for="">Cuerpo</label>
                    <textarea class="llenar" name="cuerpo" placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
                </div>

                <button type="submit" class="custom-btn btn-6">Modificar</button>
            </form>
        </div>
    </div>
    {{#if error}}
    <h5>{{message}}</h5>
    {{/if}}
</div>